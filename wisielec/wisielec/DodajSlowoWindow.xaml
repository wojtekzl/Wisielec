<Window x:Class="wisielec.DodajSlowoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj słowo" Height="400" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <StackPanel Margin="10">
        <TextBlock Text="Nowe słowo:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Name="NoweSlowoInput" Height="30" FontSize="16" Margin="0,0,0,10"/>

        <Button Content="Dodaj słowo" Height="40" Click="DodajSlowo_Click" Margin="0,0,0,10"/>

        <TextBlock Name="InfoText" Margin="0,0,0,15" FontSize="14"/>

        <ListBox Name="ListaSlow" Height="150"/>
    </StackPanel>
</Window>
