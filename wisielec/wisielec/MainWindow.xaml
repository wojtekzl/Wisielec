<Window x:Class="wisielec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wisielec" Height="500" Width="1000" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Image Name="WisielecImage" Grid.Column="0" Margin="0" Grid.Row="1" Width="410" Height="410" Stretch="Uniform" Source="/Images/00.png" />
        </Grid>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60px"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Wisielec" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,7,0,0"/>

            <Button  Width="40" Height="40" Click="Settings_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Background="White" Margin="380,0,0,0" BorderThickness="0px">
                <Image Source="/Images/info.png"></Image>
            </Button>


                <Button  Width="40" Height="40" Click="OtworzDodajSlowoWindow_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Background="White" Margin="430,0,0,0" BorderThickness="0px">
                <Image Source="/Images/settings.png" Height="40px"></Image>
            </Button>


            <StackPanel Grid.Column="1" Grid.Row="1" Margin="10" VerticalAlignment="Top">
                <TextBlock Text="Hasło:" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                <TextBlock x:Name="HasloText" FontSize="26" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Pozostałe próby:" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center"/>
                <TextBlock x:Name="ProbyText" FontSize="22" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBox x:Name="LiteraInput" MaxLength="1" Width="70" Height="45" FontSize="22" Margin="0,5,0,15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button x:Name="ZgadnijButton" Content="Zgadnij" Width="130" Height="50" FontSize="22" Click="Zgadnij_Click"/>


                <TextBlock x:Name="WiadomoscText" FontSize="20"  Margin="0,20,0,0" TextWrapping="Wrap" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
